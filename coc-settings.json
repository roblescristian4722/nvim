{
    "clangd.arguments": [
        "--compile-commands-dir=./build",
        "--background-index",
        "--completion-style=detailed"
    ],
    "clangd.fallbackFlags": [
        "-Wall"
    ],
    "clangd.semanticHighlighting": true,
    "languageserver": {
        "kotlin": {
            "command": "kotlin-language-server",
            "filetypes": ["kotlin"]
        }
    },
    "tsserver.npm": "/usr/bin/npm"

}
